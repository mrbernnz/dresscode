<div id="maincontainer">
    <div class="row">
      <%= image_tag "background.png", class: "col-md-12 background" %>
    </div>
    <header>
      <div class="upperHeader">
        <div class="container">
          <ul class="pull-right inline">
            <li class="divider-vertical"></li>
          </ul>
        </div>
      </div>
    </header>
      <%= form_for  @user do |f| %>
    <div class="create">
      <div class="input"><%= f.text_field :first_name, placeholder: "First Name" %></div>
      
      <div class="input"><%= f.text_field :last_name, placeholder: "Last Name" %></div>
      
      <div class="input"><%= f.email_field :email, placeholder: "Email" %></div>
      
      <div class="input"><%= f.password_field :password, placeholder: "Password" %></div>
      
      <div class="button"><%= f.submit %></div>
    </div>
      <% end %>
  </div>
