            <li><%= link_to "Logout", users_path, class: "invarseColor" %></li>
          </form>
        </ul>
      </div>
    </div>
  </header>
  <%= button_to "WHAT TO WEAR", outfit_path(@outfit.id), class: "splashlink1", method: :get %>
  <%= button_to "CLOSET", outfits_path(@outfit.id), class: "splashlink2", method: :get %>
</div>

